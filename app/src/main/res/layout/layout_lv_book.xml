<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/white"
    android:id="@+id/rl_main">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_height="80dp">

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="30dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_time_top"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/iv_time"/>
            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/pencil"/>
            <TextView
                android:id="@+id/tv_time_buttom"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/iv_time"/>
        </RelativeLayout>
    <LinearLayout 
        android:id="@+id/ll"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/rl_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/null_black_white">
        
        <TextView
            android:layout_weight="1"
            android:layout_margin="5dp"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textColor="@color/textcolor"
	        android:id="@+id/tv_lv_date"/>
	
	<TextView
        android:layout_weight="1"
	    android:layout_margin="5dp"
	     android:textColor="@color/textcolor"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
        android:singleLine="true"
	    android:id="@+id/tv_lv_info"/>
	

    </LinearLayout>
    </RelativeLayout>
    
     
   
    
	
	
	<!-- <android.support.v7.widget.CardView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"/>  -->
</RelativeLayout>
